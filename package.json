{
  "name": "screen-recorder",
  "version": "1.0.0",
  "description": "A minimal Electron application",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "package": "electron-packager . screen-recorder --platform=win32 --arch=x64 --icon=app/icon/icon.ico --out=./dist --app-version=1.0.0 --asar --ignore=\"(dist|.git|docs|.gitignore|LICENSE|README.md|webpack.config*|node_modules|package-lock.json)\"",
    "packageDarwin": "electron-packager . screen-recorder --platform=darwin --arch=x64 --icon=app/icon/icon.icns --out=./distDarwin --asar --app-version=1.0.0 --ignore=\"(dist|.git|docs|.gitignore|LICENSE|README.md|webpack.config*|node_modules|package-lock*)\"",
    "packageLinux": "electron-packager . screen-recorder --platform=linux --arch=x64 --icon=app/icon/icon.ico --out=./distLinux --asar --app-version=1.0.0 --ignore=\"(dist|docs|.git|.gitignore|LICENSE|README.md|webpack.config*|node_modules|package-lock*)\""
  },
  "repository": "https://github.com/electron/electron-quick-start",
  "keywords": [
    "Electron",
    "quick",
    "start",
    "tutorial",
    "demo"
  ],
  "author": "yonglei.shang",
  "license": "CC0-1.0",
  "devDependencies": {
    "electron": "6.0.7"
  },
  "build": {
    "win": {
      "icon": "./app/icon/icon.ico"
    },
    "mac": {
      "icon": "./app/icon/icon.icns"
    },
    "linux": {
      "icon": "./app/icon"
    }
  }
}
